#!/bin/bash
# smplOS: Launch the default terminal.
#
# st-wl reads term_opacity_active / term_opacity_inactive directly from the
# active theme's colors.toml at startup â€” no need to pass -A here.
#
# Usage:  terminal              # opens shell
#         terminal -e nvim      # opens nvim

if [[ -n "$WAYLAND_DISPLAY" ]]; then
    if [[ -x /usr/local/bin/st-wl ]]; then
        exec /usr/local/bin/st-wl "$@"
    fi
    exec st-wl "$@"
else
    if [[ -x /usr/local/bin/st ]]; then
        exec /usr/local/bin/st "$@"
    fi
    exec st "$@"
fi
